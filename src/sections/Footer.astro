import { CiFacebook, CiLinkedin } from "react-icons/ci";
import { FaXTwitter } from "react-icons/fa6";

---

<footer class="footer w-[100%] mt-10">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 mx-auto text-center">
        <div class="footer-logo flex justify-center">
          <img src="/logo.jpg" alt="logo" width="300rem" />
        </div>
      </div>
    </div><div class="row">
      <div class="col-lg-6 mx-auto">
        <div class="footer-nav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/blog">Blog</a>
            </li><li class="nav-item">
              <a class="nav-link" href="/events">Eventi</a>
            </li><li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
          </ul>
        </div>
      </div>
    </div><div class="row">
      <div class="col-lg-6 mx-auto">
        <div class="sociale-icon">
          <ul>
            <li>
              <a href="#" target="_blank"><CiLinkedin /></a>
            </li><li>
              <a href="#" target="_blank"><CiFacebook /></a>
            </li><li>
              <a href="#" target="_blank"
                ><FaXTwitter/></a
              >
            </li>
          </ul>
        </div>
      </div>
    </div><div class="row">
      <div class="col-lg-12">
        <div class="copy-right">
          <p>
            Â© Copyright 2024 - All Rights Reserved by <a
              href="/"
              target="_blank">PugliaDevs.com</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
<style>
  .footer-logo {
    margin-bottom: 34px;
  }
  img {
    vertical-align: middle;
    border-style: none;
  }
  .footer-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 40px;
  }
  .footer-nav ul.navbar-nav {
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
  }
  .footer-nav ul.navbar-nav li.nav-item {
    display: inline-block;
  }
  .footer-nav ul.navbar-nav li.nav-item a.nav-link {
    display: block;
    color: #141414;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
  }
  .footer .sociale-icon {
    text-align: center;
    margin-bottom: 100px;
  }
  .footer .sociale-icon ul {
    padding: 0;
    margin: 0;
  }
  .footer .sociale-icon ul li {
    display: inline-block;
    list-style: none;
  }
  .footer .sociale-icon ul li a {
    color: gray;
    font-size: 26px;
    width: 40px;
    height: 40px;
    background-color: #fff;
    border-radius: 50px;
    margin-right: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border: 1px solid #e0dede;
    transition: all 0.3s ease-in-out;
  }
  .footer .copy-right {
    background-color: #000;
    padding: 35px 0;
  }
  .footer .copy-right p {
    text-align: center;
    margin-bottom: 0;
    font-size: 13px;
    font-weight: 600;
    color: #fff;
  }
  .footer .copy-right a {
    font-size: 13px;
    font-weight: 600;
    color: #fff;
  }
</style>
